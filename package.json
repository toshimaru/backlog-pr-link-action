{
  "name": "backlog-pr-link-action",
  "version": "2.1.2",
  "private": true,
  "description": "GitHub Actions: Link PR to backlog issue.",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "ncc build src/main.ts --license licenses.txt",
    "fmt": "deno fmt -c ./deno.jsonc",
    "test": "jest",
    "lint": "deno lint -c ./deno.jsonc",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toshimaru/backlog-pr-link-action.git"
  },
  "keywords": [
    "backlog",
    "actions",
    "github",
    "github-action"
  ],
  "author": "toshimaru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toshimaru/backlog-pr-link-action/issues"
  },
  "homepage": "https://github.com/toshimaru/backlog-pr-link-action#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "6.0.0",
    "backlog-js": "^0.13.3",
    "isomorphic-fetch": "^3.0.0",
    "isomorphic-form-data": "^2.0.0"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "0.0.39",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.46",
    "@vercel/ncc": "^0.38.3",
    "jest": "^29.7.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
